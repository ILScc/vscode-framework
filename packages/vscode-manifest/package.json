{
    "name": "vscode-manifest",
    "version": "0.0.3",
    "main": "build/index.js",
    "types": "build/index.d.ts",
    "files": [
        "build"
    ],
    "description": "Contains TypeScript types, JSON schema and compiled validator for VSCode Extension Manifest",
    "scripts": {
        "postinstall": "path-exists src/generated/validate.js || pnpm generate-validator",
        "prepublishOnly": "pinst --disable",
        "postpublish": "pinst --enable",
        "generate-validator": "ts-node scripts/generateSchemaValidator.ts"
    },
    "keywords": [
        "vscode",
        "extracted",
        "package.json",
        "manifest",
        "read",
        "parse",
        "validate",
        "validator"
    ],
    "devDependencies": {
        "@types/node": "^16.10.1",
        "@zardoy/tsconfig": "^1.2.2",
        "ajv": "^8.6.3",
        "chalk": "^4.1.2",
        "esbuild": "^0.13.3",
        "fs-extra": "^10.0.0",
        "jsonfile": "^6.1.0",
        "path-exists-cli": "^2.0.0",
        "pinst": "^2.1.6",
        "ts-json-schema-generator": "^0.95.0",
        "type-fest": "2.3.4",
        "typescript": "^4.4.3",
        "typescript-json-schema": "^0.51.0"
    }
}
